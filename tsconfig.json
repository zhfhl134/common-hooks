{
  "root": true,
  "compilerOptions": {
    "target": "ES5",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "commonHooks": ["packages/hooks/src/index.ts"],
      "common-hooks": ["packages/hooks/src/index.ts"],
      "commonHooks/lib/*": ["./packages/hooks/src/*"],
      "common-hooks/lib/*": ["./packages/hooks/src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "importHelpers": true
  },
  "exclude": ["node_modules", "lib", "es", "dist", "example"]
}
